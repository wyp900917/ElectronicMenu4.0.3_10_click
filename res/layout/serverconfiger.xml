<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="100dp"
    android:paddingBottom="80dp" >
    
    <TextView 
        android:id="@+id/Tv_serverConfiger"
        android:text="@string/serverConfiger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#aa0000" />
    
    <TextView 
        android:id="@+id/Tv_serverIP"
        android:text="@string/serverIP"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@id/Tv_serverConfiger"
        android:textSize="25dp"
        android:textStyle="bold" />
    
    <EditText 
        android:id="@+id/Et_serverIP_1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/Tv_serverIP"
        android:layout_below="@id/Tv_serverConfiger"
        android:textSize="20dp"
        android:inputType="number" />
    <TextView 
        android:id="@+id/separator_1"
        android:text="@string/separator"
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/Et_serverIP_1"
        android:layout_below="@id/Tv_serverConfiger" />
    <EditText 
        android:id="@+id/Et_serverIP_2" 
        android:layout_width="60dp" 
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/separator_1"
        android:layout_below="@id/Tv_serverConfiger"
        android:textSize="20dp"
        android:inputType="number" />
    <TextView 
        android:id="@+id/separator_2"
        android:text="@string/separator"
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/Et_serverIP_2"
        android:layout_below="@id/Tv_serverConfiger" />
    <EditText 
        android:id="@+id/Et_serverIP_3" 
        android:layout_width="60dp" 
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/separator_2"
        android:layout_below="@id/Tv_serverConfiger"
        android:textSize="20dp"
        android:inputType="number" />
    <TextView 
        android:id="@+id/separator_3"
        android:text="@string/separator"
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/Et_serverIP_3"
        android:layout_below="@id/Tv_serverConfiger" />
    <EditText 
        android:id="@+id/Et_serverIP_4" 
        android:layout_width="60dp" 
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/separator_3"
        android:layout_below="@id/Tv_serverConfiger"
        android:textSize="20dp"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/Tv_serverport"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/port"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/Tv_serverIP"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="50dp" />
    
    <EditText
        android:id="@+id/Ev_serverport"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Tv_serverport"
        android:layout_below="@id/Tv_serverIP"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="20dp"
        android:inputType="number" />
    
    <TextView 
        android:id="@+id/middle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />
    
    <Button
        android:id="@+id/btn_serverconfigerCommit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ev_serverport"
        android:layout_toLeftOf="@id/middle_text"
        android:text="@string/commit"
        android:textColor="#fc0"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@drawable/btn_callserver"
        android:layout_marginTop="50dp" />
    
    <Button
        android:id="@+id/btn_serverback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ev_serverport"
        android:text="@string/back"
        android:textColor="#fc0"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_toRightOf="@id/middle_text"
        android:background="@drawable/btn_callserver"
        android:layout_marginTop="50dp" />
    
</RelativeLayout>    